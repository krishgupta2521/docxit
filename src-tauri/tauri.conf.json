{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DOCXIT - Documentation Suite",
  "version": "0.1.0",
  "identifier": "com.enreach.docxit",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../web"
  },
  "app": {
    "windows": [
      {
        "title": "DOCXIT - Forensic Documentation Suite",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "allowDowngrades": false,
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "dialog": {
      "all": true,
      "open": true,
      "save": true
    },
    "shell": {
      "all": false,
      "open": true
    }
  }
}
